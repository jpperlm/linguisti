<?xml version='1.0' encoding='utf-8'?>
<widget id="com.perlmanlabs.linguisti" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>Linguisti</name>
    <description>
        Basic foreign alphabet educational app.
    </description>
    <author email="jason@perlman.dev" href="http://www.perlmanlabs.com/">
        Jason Perlman (PerlmanLabs)
    </author>
    <icon src="/static/dog.png" />
    <content src="dist/index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreenDelay" value="100" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
</widget>
